@component('layouts/main')

@slot('title')
<span class="text-red-700 font-bold text-2xl">🚨 Alerts</span>
@endslot

<div class="max-w-5xl mx-auto py-8 px-4">
  <h1 class="text-3xl font-semibold mb-6">Active Alerts</h1>

  <ul class="grid md:grid-cols-2 gap-6">
    @each(alert in alerts)
    <li class="border-l-4 p-4 rounded-xl shadow
                {{ alert.alertType === 'weather' ? 'bg-red-50 border-red-500' 
                : alert.alertType === 'environmental' ? 'bg-yellow-50 border-yellow-500' 
                : 'bg-gray-50 border-gray-500' }}">
      <div class="flex items-start justify-between">
        <div>
          <h2 class="text-xl font-semibold">
            {{ alert.forecast?.title ? alert.forecast.title : '🔍 Forecast Unavailable' }}
          </h2>
          <p class="text-sm text-gray-500 mt-2">
            📍 {{ alert.region ? alert.region : '🌍 Location Unknown' }}
          </p>
          <p class="mt-1 text-gray-700">⚠️ {{ alert.message }}</p>
        </div>
        <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full
              {{ alert.alertType === 'weather' ? 'bg-red-100 text-red-700' 
              : alert.alertType === 'environmental' ? 'bg-yellow-100 text-yellow-700' 
              : 'bg-gray-100 text-gray-700' }}">
          {{ alert.alertType.toUpperCase() }}
        </span>
      </div>
    </li>
    @endeach
  </ul>
</div>

@endcomponent
